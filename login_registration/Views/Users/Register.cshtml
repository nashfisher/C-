    <h4>Create an account</h4>
    <form asp-controller="Users" asp-action="ProcessRegister" method="POST">
        <div class="uk-margin">
            <input class="uk-input" asp-for="First_Name" placeholder="First Name" />
        </div>
        <div class="uk-margin">
            <input class="uk-input" asp-for="Last_Name" placeholder="Last Name" />
        </div>
        <div class="uk-margin">
            <input class="uk-input" type="email" asp-for="Email" placeholder="Email" />
        </div>
        <div class="uk-margin">
            <input class="uk-input" type="password" asp-for="Password" placeholder="Password" />
        </div>
        <div class="uk-margin">
            <input class="uk-input" type="password" name="Password_Confirm" placeholder="Confirm Password" />
        </div>
        <div class="uk-margin">
            <button class="uk-button uk-button-default">Register</button>
        </div>
    </form>
    <a class="uk-link-blue" href="/login">Login with existing account</a>

    <div asp-validation-summary="All"></div>
    <div><p>@TempData["error"]</p></div>
</div>